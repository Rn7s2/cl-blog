    <div class="container" style="margin-top:30px">
      <div class="row">
        <div class="col-sm-9">
          <div class="card">
            <div class="card-header"><h3>添加文章</h3></div>
            <div class="card-body">
              <label for="title">标题:</label>
              <input type="text" class="form-control" id="title"
                     onkeydown="if(event.keyCode==13){event.keyCode=0;event.returnValue=false;}"></input>
              <label for="editor">内容:</label>
              <div id="editor"></div>
              <br/>
              <a class="btn btn-info" role="button" onclick="submit()" style="float: right;">提交</a>
              <script>
                const E = window.wangEditor;
                const editor = new E(document.getElementById('editor'));
                editor.create();
                
                function doPost(to, p) {
                    　　var myForm = document.createElement("form");
                    　　myForm.method = "post";
                    　　myForm.action = to;
                    　　for (var i in p){
                        　　　　var myInput = document.createElement("input");
                        　　　　myInput.setAttribute("name", i);
                        　　　　myInput.setAttribute("value", p[i]);
                        　　　　myForm.appendChild(myInput);
                        　　}
                    　　document.body.appendChild(myForm);
                    　　myForm.submit();
                    　　document.body.removeChild(myForm);
                }
                
                function submit() {
                    var data = {
                        title: document.getElementById('title').value,
                        content: editor.txt.html()
                    };

                    if(data.title.length > 0) {
                        doPost('/add', data);
                    } else {
                        alert('您未填写标题！');
                    }
                }
              </script>
            </div>
          </div>
          <br/>
          <div class="card">
            <div class="card-header"><h3>文章管理</h3></div>
            <div class="card-body">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>序号</th>
                    <th>标题</th>
                    <th>最后修改</th>
                    <th>操作</th>
                  </tr>
                </thead>
                <tbody>
                  <!-- TMPL_LOOP posts -->
                  <tr>
                    <td><!-- TMPL_VAR id --></td>
                    <td><!-- TMPL_VAR title --></td>
                    <td><!-- TMPL_VAR date --></td>
